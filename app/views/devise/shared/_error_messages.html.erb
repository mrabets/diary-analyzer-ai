<% if resource.errors.any? %>
  <div id="error_explanation" class="col-md-4 offset-md-4">
    <div class="mb-3 alert alert-danger">
      <i class="fas fa-exclamation-triangle"></i> <!-- Иконка предупреждения -->
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
