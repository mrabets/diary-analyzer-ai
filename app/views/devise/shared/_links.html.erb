<% if controller_name != 'sessions' %>
  <%= button_to new_session_path(resource_name), method: :get, class: "btn btn-dark" do %>
    <%= content_tag(:i, "", class: "fas fa-sign-in-alt") %> Log in
  <% end %><br>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= button_to new_registration_path(resource_name), method: :get, class: "btn btn-dark" do %>
    <%= content_tag(:i, "", class: "fas fa-user-plus") %> Sign up
  <% end %><br>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to new_password_path(resource_name), class: "link-dark" do %>
    <%= content_tag(:i, "", class: "fas fa-unlock-alt") %> Forgot your password?
  <% end %><br>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to new_confirmation_path(resource_name), class: "link-dark" do %>
    <%= content_tag(:i, "", class: "fas fa-envelope") %> Didn't receive confirmation instructions?
  <% end %><br>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to new_unlock_path(resource_name), class: "link-dark" do %>
    <%= content_tag(:i, "", class: "fas fa-lock-open") %> Didn't receive unlock instructions?
  <% end %><br>
<% end %>
