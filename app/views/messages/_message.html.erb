<div id="<%= dom_id(message) %>" data-controller="message" class="message-card">
  <div class="card">
    <div class="card-body">
      <strong>
        <%= link_to message.user.name, user_path(message.user), data: { turbo: false },
                                                                class: "link-dark", style: "text-decoration: none;" %>
      </strong>
      <p><%= message.body %></p>
    </div>
  </div>
</div>
