<turbo-frame id="new_message">
  <%= form_with model: [conversation, Message.new], local: true, class: "form-inline",
                data: { turbo_frame: "messages", controller: "form",
                        action: "turbo:submit-end->form#reset keydown.enter->form#submitOnEnter" } do |form| %>
    <div class="form-group mb-2">
      <%= form.text_area :body, class: "form-control", rows: 1, placeholder: t("chat.placeholder") %>
    </div>
    <div class="form-group text-center">
      <%= form.button class: "button-as-icon" do %>
        <div class="p-2">
          <span class="fa-stack fa-lg">
            <i class="fas fa-circle fa-stack-2x"></i>
            <i class="fa-regular fa-paper-plane fa-stack-1x fa-inverse"></i>
          </span>
        </div>
      <% end %>
    </div>
  <% end %>
</turbo-frame>
